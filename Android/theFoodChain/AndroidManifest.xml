<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jpmorgan.thefoodchain"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jpmorgan.thefoodchain.Menus.LoginMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jpmorgan.thefoodchain.Menus.MainMenu" >
        </activity>
        <activity android:name="com.jpmorgan.thefoodchain.Menus.DeliveryMenu" >
        </activity>
        <activity
            android:name="com.jpmorgan.thefoodchain.Dialogs.InformationDialog"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.jpmorgan.thefoodchain.Dialogs.ConfirmationDialog"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="com.jpmorgan.thefoodchain.Menus.RegisterMenu" >
        </activity>
        <activity android:name="com.jpmorgan.thefoodchain.Menus.DeliveryList" >
        </activity>
    </application>

</manifest>